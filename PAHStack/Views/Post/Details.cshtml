@model PAHStack.Models.PostModel
 

@{
    ViewBag.Title = "Details";
}

@*Title(Question) at Top of Each Details(Question) Page*@
<div>
    <h2>
        @Html.DisplayFor(model => model.Title)
    </h2>
</div>

<hr />

<div class="col-xs-12">
    <div class="col-xs-1">
      @*@*<div id="voteContainer-@Model.Id">
          <div id="voteContainer">
              @Html.Partial("_PartialVoteDisplay", new VoteButtonContainer { Post = post, VoteValue = 0 })
          </div>*@

        <div class="stars">
            <input class="star" type="checkbox" title="bookmark page" checked><br /><br />
        </div>
    </div>

    <div class="col-xs-11">
        <dl>
            <dd class="commentText">
                @Html.DisplayFor(model => model.Body)
            </dd>

            @if (!String.IsNullOrEmpty(Model.Img))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Img)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Img)
                </dd>
            }
        </dl>
    </div>
    <div class="col-xs-5">
        ***Placeholder for tags***
    </div>
    <div class="col-xs-5">
        <span>@Html.DisplayFor(model => model.DatePosted)</span>
        <span>Posted by @Html.DisplayFor(model => model.User.UserName)</span>
    </div>
</div>

<hr />

    </dl>
</div>

<p></p>

<br /> 
<br /> 
<br />
<br />  


<p>
    
   
    @Html.ActionLink("Test making a comment", "Create", "Answer", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm &raquo" }) | 
   
